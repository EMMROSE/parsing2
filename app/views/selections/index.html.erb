<h1>Les sélections de <%= @fournisseur.firstname %> <%= @fournisseur.lastname %></h1>
<%= link_to 'Retour au fournisseur', fournisseur_path(@fournisseur), class: "btn btn-alert"%>
<%= link_to 'retour au Menu', root_path, class: "btn btn-success"%>
<br>
<div>
  <% @fournisseur.selections.each do |selection| %>
    <table style="border: 1px solid black;">
      <h3><%= selection.date %> - <%= selection.products.count %> produits</h3>
      <%= link_to 'Voir sa sélection', selection_path(selection), class: "btn btn-success"%> <%= link_to 'Editer cette sélection', edit_selection_path(selection), class: "btn btn-primary"%> <%= link_to 'Supprimer cette sélection', selection_path(selection), method: :delete, class: "btn btn-danger"%>
   </table>
  <% end %>
</div>
